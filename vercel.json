{
  "version": 2,
  "name": "personal-website",
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.js)$", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=0" } },
    { "src": "/(.*\\.css)$", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=31536000" } },
    { "src": "/(.*\\.html)$", "dest": "/$1" },
    { "src": "^/(?!.*\\.(js|css|html|png|jpg|jpeg|gif|svg|ico|json|txt|woff|woff2|ttf|eot)).*$", "dest": "/index.html" }
  ]
}

